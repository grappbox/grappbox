<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GrappBox.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:slideMenu="using:GrappBox.CustomControler.SlidingMenu"
    xmlns:ViewModel="using:GrappBox.ViewModel"
    x:Class="GrappBox.View.TimelineView"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <slideMenu:SlideInMenuContentControl x:Name="slideInMenuContentControl" MenuState="Left" IsDoubleTapEnabled="False">
        <slideMenu:SlideInMenuContentControl.LeftMenuContent>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Content="Dashboard" Click="DashboardButton_Click" Grid.Row="0" HorizontalAlignment="Center"/>
                <Button Content="WhiteBoard" Click="WhiteboardButton_Click" Grid.Row="1" HorizontalAlignment="Center"/>
                <Button Content="User Settings" Click="UserSettingsButton_Click" Grid.Row="2" HorizontalAlignment="Center"/>
                <Button Content="Project Settings" Click="ProjectSettingsButton_Click" Grid.Row="3" HorizontalAlignment="Center"/>
                <Button Content="Bugtracker" Click="BugtrackerButton_Click" Grid.Row="4" HorizontalAlignment="Center"/>
            </Grid>
        </slideMenu:SlideInMenuContentControl.LeftMenuContent>
        <Pivot x:Name="Pivot" Title="Timeline" Background="#FF0C0C0C" Height="{Binding ActualHeight, ElementName=slideInMenuContentControl, Mode=OneWay}">
            <PivotItem Header="{Binding TeamName}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="4*"/>
                    </Grid.RowDefinitions>
                    <ListBox Grid.Row="0" x:Name="TeamListView" ItemsSource="{Binding TeamList}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Background="{x:Null}" Foreground="White" SelectionChanged="ListView_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="White" BorderThickness="2" HorizontalAlignment="Stretch" Height="Auto" Width="Auto">
                                    <StackPanel Loaded="StackPanel_Loaded">
                                        <TextBlock  Text="Title" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="18"/>
                                        <TextBox PlaceholderText="Title" Text="{Binding Title, Mode=TwoWay}"/>
                                        <TextBlock Text="Message" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="18"/>
                                        <TextBox TextWrapping="Wrap" AcceptsReturn="True" PlaceholderText="Message" Text="{Binding Message, Mode=TwoWay}" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Button Content="Edit" Click="EditMessage_Click" HorizontalAlignment="Center" Width="90" Height="50" MinWidth="80" MinHeight="60" Margin="10"/>
                                            <Button Content="Delete" Click="DeleteMessage_Click" HorizontalAlignment="Center" Width="90" Height="50" MinWidth="80" MinHeight="60" Margin="10"/>
                                        </StackPanel>
                                        <Button Content="Set As Bug" Click="Bug_Click" HorizontalAlignment="Center" Width="140" Height="50" MinWidth="130" MinHeight="60" Margin="10"/>
                                        <Button Content="See Comments" Click="Comments_Click" HorizontalAlignment="Center" Width="140" Height="50" MinWidth="130" MinHeight="60" Margin="10"/>
                                        <TextBlock x:Name="block" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="14"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Border Grid.Row="1" BorderBrush="White" BorderThickness="2" Height="Auto" Width="Auto">
                        <StackPanel>
                            <TextBlock Text="Post Message" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="18"/>
                            <TextBox x:Name="MessageTitle" PlaceholderText="Title"/>
                            <TextBox x:Name="Message" TextWrapping="Wrap" AcceptsReturn="True" PlaceholderText="Message" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                            <Button Content="Post Message" Click="PostTeamMessage_Click" HorizontalAlignment="Center" Width="150" Height="50" MinWidth="140" MinHeight="50"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </PivotItem>
            <PivotItem Header="{Binding CustomerName}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="4*"/>
                    </Grid.RowDefinitions>
                    <ListBox Grid.Row="0" x:Name="CustomerListView" ItemsSource="{Binding CustomerList}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Background="{x:Null}" Foreground="White" SelectionChanged="ListView_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="White" BorderThickness="2" HorizontalAlignment="Stretch" Height="Auto" Width="Auto">
                                    <StackPanel Loaded="StackPanel_Loaded">
                                        <TextBlock  Text="Title" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="18"/>
                                        <TextBox PlaceholderText="Title" Text="{Binding Title, Mode=TwoWay}"/>
                                        <TextBlock Text="Message" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="18"/>
                                        <TextBox TextWrapping="Wrap" AcceptsReturn="True" PlaceholderText="Message" Text="{Binding Message, Mode=TwoWay}" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Button Content="Edit" Click="EditMessage_Click" HorizontalAlignment="Center" Width="90" Height="50" MinWidth="80" MinHeight="60" Margin="10"/>
                                            <Button Content="Delete" Click="DeleteMessage_Click" HorizontalAlignment="Center" Width="90" Height="50" MinWidth="80" MinHeight="60" Margin="10"/>
                                        </StackPanel>
                                        <Button Content="See Comments" Click="Comments_Click" HorizontalAlignment="Center" Width="140" Height="50" MinWidth="130" MinHeight="60" Margin="10"/>
                                        <TextBlock x:Name="block" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="14"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Border Grid.Row="1" BorderBrush="White" BorderThickness="2" Height="Auto" Width="Auto">
                        <StackPanel>
                            <TextBlock Text="Post Message" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="18"/>
                            <TextBox x:Name="CustomerTitle" PlaceholderText="Title"/>
                            <TextBox x:Name="CustomerMessage" TextWrapping="Wrap" AcceptsReturn="True" PlaceholderText="Message" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                            <Button Content="Post Message" Click="PostCustomerMessage_Click" HorizontalAlignment="Center" Width="150" Height="50" MinWidth="140" MinHeight="50"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </PivotItem>
        </Pivot>
    </slideMenu:SlideInMenuContentControl>
</Page>
