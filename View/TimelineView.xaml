<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GrappBox.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:slideMenu="using:GrappBox.CustomControler.SlidingMenu"
    xmlns:ViewModel="using:GrappBox.ViewModel"
    x:Class="GrappBox.View.TimelineView"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:customControler="using:GrappBox.CustomControler">

    <Page.BottomAppBar>
        <CommandBar x:Name="CB" ClosedDisplayMode="Compact">
            <AppBarButton Name="AddTeamMessage" Label="Add" Click="AddTeam_Click" Icon="Add"/>
            <AppBarButton Name="AddCustomerMessage" Visibility="Collapsed" Label="Add" Click="AddCustomer_Click" Icon="Add"/>
        </CommandBar>
    </Page.BottomAppBar>

    <slideMenu:SlideInMenuContentControl x:Name="slideInMenuContentControl" MenuState="Left" IsDoubleTapEnabled="False">
        <slideMenu:SlideInMenuContentControl.LeftMenuContent>
            <customControler:LeftMenu/>
        </slideMenu:SlideInMenuContentControl.LeftMenuContent>
        <Pivot x:Name="Pivot" Title="Timeline" Height="{Binding ActualHeight, ElementName=slideInMenuContentControl, Mode=OneWay}" SelectionChanged="Pivot_SelectionChanged">
            <PivotItem Header="{Binding TeamName}">
                <Grid>
                    <ListBox x:Name="TeamListView" ItemsSource="{Binding TeamList}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" SelectionChanged="ListView_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Loaded="StackPanel_Loaded">
                                    <TextBlock  Text="Title" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="18"/>
                                    <TextBox PlaceholderText="Title" Text="{Binding Title, Mode=TwoWay}"/>
                                    <TextBlock Text="Message" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="18"/>
                                    <TextBox TextWrapping="Wrap" AcceptsReturn="True" PlaceholderText="Message" Text="{Binding Message, Mode=TwoWay}" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Button Content="Edit" Click="EditMessage_Click" HorizontalAlignment="Center" Width="90" Height="50" MinWidth="80" MinHeight="60" Margin="10"/>
                                        <Button Content="Delete" Click="DeleteMessage_Click" HorizontalAlignment="Center" Width="90" Height="50" MinWidth="80" MinHeight="60" Margin="10"/>
                                    </StackPanel>
                                    <Button Content="Set As Bug" Click="Bug_Click" HorizontalAlignment="Center" Width="140" Height="50" MinWidth="130" MinHeight="60"/>
                                    <Button Content="Comments" Click="Comments_Click" HorizontalAlignment="Center" Width="140" Height="50" MinWidth="130" MinHeight="60"/>
                                    <TextBlock x:Name="block" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="14"/>
                                    <Line Stretch="Fill" Height="2" Stroke="White" Fill="White" StrokeThickness="2" X1="2" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Popup x:Name="PostTeamMesPopUp" Visibility="Collapsed" IsOpen="True">
                        <StackPanel Width="{Binding ActualWidth, ElementName=slideInMenuContentControl, Mode=OneWay}" Background="#FF3b3b3b" Margin="-20,100,0,0">
                            <TextBlock Text="Post Message" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="18" Margin="15"/>
                            <TextBox x:Name="MessageTitle" PlaceholderText="Title" Margin="15"/>
                            <TextBox x:Name="Message" TextWrapping="Wrap" AcceptsReturn="True" Margin="15" PlaceholderText="Message" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Content="Cancel" Grid.Column="0" Click="CancelTeam_Click" HorizontalAlignment="Center" Width="90" Height="50" MinWidth="80" MinHeight="60"/>
                                <Button Content="Post" Grid.Column="1" Click="PostTeamMessage_Click" HorizontalAlignment="Center" Width="90" Height="50" MinWidth="80" MinHeight="60"/>
                            </Grid>
                        </StackPanel>
                    </Popup>
                </Grid>
            </PivotItem>
            <PivotItem Header="{Binding CustomerName}">
                <Grid>
                    <ListBox x:Name="CustomerListView" ItemsSource="{Binding CustomerList}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" SelectionChanged="ListView_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Loaded="StackPanel_Loaded">
                                    <TextBlock  Text="Title" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="18"/>
                                    <TextBox PlaceholderText="Title" Text="{Binding Title, Mode=TwoWay}"/>
                                    <TextBlock Text="Message" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="18"/>
                                    <TextBox TextWrapping="Wrap" AcceptsReturn="True" PlaceholderText="Message" Text="{Binding Message, Mode=TwoWay}" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Button Content="Edit" Click="EditMessage_Click" HorizontalAlignment="Center" Width="90" Height="50" MinWidth="80" MinHeight="60" Margin="10"/>
                                        <Button Content="Delete" Click="DeleteMessage_Click" HorizontalAlignment="Center" Width="90" Height="50" MinWidth="80" MinHeight="60" Margin="10"/>
                                    </StackPanel>
                                    <Button Content="Set As Bug" Click="Bug_Click" HorizontalAlignment="Center" Width="140" Height="50" MinWidth="130" MinHeight="60"/>
                                    <Button Content="Comments" Click="Comments_Click" HorizontalAlignment="Center" Width="140" Height="50" MinWidth="130" MinHeight="60"/>
                                    <TextBlock x:Name="block" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="14"/>
                                    <Line Stretch="Fill" Height="2" Stroke="White" Fill="White" StrokeThickness="2" X1="2" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Popup x:Name="PostCustomerMesPopUp" Visibility="Collapsed" IsOpen="True">
                        <StackPanel Width="{Binding ActualWidth, ElementName=slideInMenuContentControl, Mode=OneWay}" Background="#FF3b3b3b" Margin="-20,100,0,0">
                            <TextBlock Text="Post Message" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15" TextWrapping="Wrap" FontFamily="Segoe WP" FontSize="18"/>
                            <TextBox x:Name="CustomerTitle" PlaceholderText="Title" Margin="15"/>
                            <TextBox x:Name="CustomerMessage" TextWrapping="Wrap" Margin="15" AcceptsReturn="True" PlaceholderText="Message" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Content="Cancel" Grid.Column="0" Click="CancelCustomer_Click" HorizontalAlignment="Center" Width="90" Height="50" MinWidth="80" MinHeight="60"/>
                                <Button Content="Post" Grid.Column="1" Click="PostCustomerMessage_Click" HorizontalAlignment="Center" Width="90" Height="50" MinWidth="80" MinHeight="60"/>
                            </Grid>
                        </StackPanel>
                    </Popup>
                </Grid>
            </PivotItem>
        </Pivot>
    </slideMenu:SlideInMenuContentControl>
</Page>
