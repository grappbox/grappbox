<Application
    x:Class="GrappBox.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GrappBox"
    xmlns:helpers="using:GrappBox.Helpers"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <helpers:AppGlobalHelper x:Key="global" />
            <ResourceDictionary.MergedDictionaries>
                <!-- Generic Styles -->
                <ResourceDictionary Source="Resources/GrappboxColors.xaml" />
                <ResourceDictionary Source="Resources/Converters.xaml" />
                <ResourceDictionary Source="Resources/PivotStyles.xaml" />
                <ResourceDictionary Source="Resources/ButtonStyles.xaml" />
                <ResourceDictionary Source="Resources/ListviewStyles.xaml" />
                <ResourceDictionary Source="Resources/CustomStyle.xaml" />
                <ResourceDictionary Source="Resources/Styles.xaml" />
                <!-- View Styles-->
                <ResourceDictionary Source="Resources/DashboardStyle.xaml" />
                <ResourceDictionary Source="Resources/CalendarStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>