<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta http-equiv="content-language" content="en-us" />
    <meta name="description" content="GrappBox" />
    <meta name="author" content="The GrappBox team" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="UTF-8" />
    <title>GrappBox</title>

    <!-- Google Fonts -->
    <link rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700' />
    <link rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Roboto:100,300,400,700,500' />

    {% stylesheets
    '@SharedBundle/Resources/public/css/vendor/bootstrap.min.css'
    '@SharedBundle/Resources/public/css/vendor/font-awesome.min.css'
    '@SharedBundle/Resources/public/css/vendor/hover.min.css'
    '@SharedBundle/Resources/public/css/vendor/landing-page.min.css'
    output='resources/css/styles.min.css' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}

    {% block child_stylesheets %}{% endblock %}

    {% block child_fonts %}{% endblock %}

    <!-- Responsive for IE8 -->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>

    <body>
        {% block body %}{% endblock %}

        {% javascripts
        '@SharedBundle/Resources/public/js/vendor/jquery.js'
        '@SharedBundle/Resources/public/js/vendor/bootstrap.min.js'
        output='resources/js/scripts.min.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        <script type="text/javascript">
            $(document).ready(function(){
                $('a[href^="#"]').on('click',function (e) {
                    e.preventDefault();

                    var target = this.hash;
                    var $target = $(target);

                    $('html, body').stop().animate({
                       'scrollTop': $target.offset().top
                   }, 700, 'swing');
                });
            });
        </script>

        {% block child_javascripts %}{% endblock %}

    </body>

    </html>
