{% spaceless %}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
        <meta http-equiv="content-language" content="en-us" />
        <meta name="description" content="GrappBox" />
        <meta name="author" content="GrappBox" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>
        <!-- Google Fonts -->
        <link rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700' />
        <link rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Roboto+Condensed:300,400' />

        {% block child_fonts %}{% endblock %}

        {% stylesheets
        '@ShowcaseBundle/Resources/public/css/vendor/bootstrap.css'
        '@ShowcaseBundle/Resources/public/css/vendor/font-awesome.css'
        '@ShowcaseBundle/Resources/public/css/vendor/hover.css'
        '@ShowcaseBundle/Resources/public/css/vendor/landing-page.css'
        '@ShowcaseBundle/Resources/public/css/custom/base.css'
        filter='?yui_css' output='resources/css/base.min.css' %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% block child_stylesheets %}{% endblock %}

        {% block child_javascript_head %}{% endblock %}

        <!-- Responsive for IE8 -->
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>

    <body>
        <div id="showcase-wrapper">
            {% block body %}{% endblock %}

            {% javascripts
            '@ShowcaseBundle/Resources/public/js/vendor/jquery.js'
            '@ShowcaseBundle/Resources/public/js/vendor/bootstrap.js'
            '@ShowcaseBundle/Resources/public/js/vendor/smoothscroll.js'
            '@ShowcaseBundle/Resources/public/js/custom/base.js'
            filter='?yui_js' output='resources/js/base.min.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}

            {% block child_javascripts_bottom %}{% endblock %}
        </div>
    </body>
</html>

{% endspaceless %}
