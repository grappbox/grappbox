{% spaceless %}

<!DOCTYPE html>
<html lang="en" ng-app="grappbox">
	<head>
		<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
		<meta http-equiv="content-language" content="en-us" />
		<meta name="description" content="GrappBox" />
		<meta name="author" content="GrappBox" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta charset="UTF-8" />
		<base href="/app/">
		<title>GrappBox</title>

		<!-- Google Fonts -->
		<link rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700' />
		<link rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Roboto+Condensed:300,400' />

		{% stylesheets
        '@ShowcaseBundle/Resources/public/css/vendor/bootstrap.css'
        '@ShowcaseBundle/Resources/public/css/vendor/font-awesome.css'
        '@ShowcaseBundle/Resources/public/css/vendor/hover.css'
        '@ShowcaseBundle/Resources/public/css/vendor/landing-page.css'
        '@ShowcaseBundle/Resources/public/css/custom/base.css'
		'@AppBundle/Resources/public/css/vendor/sbadmin-two.css'
		'@AppBundle/Resources/public/css/custom/app.angular.css'
		filter='?yui_css' output='resources/css/app.min.css' %}
		<link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
		{% endstylesheets %}

		{% javascripts
		'@AppBundle/Resources/public/js/vendor/angular.min.js'
		'@AppBundle/Resources/public/js/vendor/angular-route.min.js'
		'@AppBundle/Resources/public/js/vendor/angular-resource.min.js'
		'@AppBundle/Resources/public/js/custom/app.angular.js'
		'@AppBundle/Resources/public/js/custom/app-routing.angular.js'
		'@AppBundle/Resources/public/js/custom/dashboard-controller.angular.js'
		'@AppBundle/Resources/public/js/custom/whiteboard-controller.angular.js'
		output='resources/js/app.angular.min.js' %}
		<script type="text/javascript" src="{{ asset_url }}"></script>
		{% endjavascripts %}

		<!-- Responsive for IE8 -->
		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>

	<body ng-controller="grappboxController">
		<span ng-cloak ng-show="show"></span>
		<div id="app-wrapper">
			<!-- Navigation content -->
			<nav class="navbar navbar-default navbar-static-top" role="navigation">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/">Grapp<span class="red">Box</span></a>
				</div>
				<!-- Navigation menu (top) -->
				<ul class="nav navbar-top-links navbar-right">
					<!-- Notifications menu -->
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" href=""><i class="fa fa-bell fa-fw"></i><i class="fa fa-caret-down"></i></a>
						<ul class="dropdown-menu dropdown-alerts"></ul>
					</li>
					<!-- User menu -->
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" href=""><i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i></a>
						<ul class="dropdown-menu dropdown-user">
							<li><a href=""><i class="fa fa-user fa-fw"></i> Profile</a></li>
							<li><a href=""><i class="fa fa-gear fa-fw"></i> Settings</a></li>
							<li class="divider"></li>
							<li><a href="/"><i class="fa fa-sign-out fa-fw"></i> Logout</a></li>
						</ul>
					</li>
				</ul>
				<!-- Navigation menu (left) -->
				<div class="navbar-default sidebar" role="navigation">
					<div class="sidebar-nav navbar-collapse">
						<ul class="nav" id="side-menu">
							<li><a ng-class="{ active: isActive('./')}" href="./"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a></li>
							<li><a ng-class="{ active: isActive('whiteboard')}" href="whiteboard"><i class="fa fa-edit fa-fw"></i> Whiteboard</a></li>
						</ul>
					</div>
				</div>
			</nav>
			<!-- Page content -->
			<div id="page-wrapper">
				<div class="row">
					<div class="col-lg-12">
						<div class="app-page">
							<!-- Modual view -->
							<div ng-view></div>
						</div>
					</div>
				</div>
			</div>
		</div>

		{% include 'AppBundle:Shared:app-footer.html.twig' %}

		{% javascripts
		'@ShowcaseBundle/Resources/public/js/vendor/jquery.js'
		'@ShowcaseBundle/Resources/public/js/vendor/bootstrap.js'
		'@ShowcaseBundle/Resources/public/js/vendor/smoothscroll.js'
		'@AppBundle/Resources/public/js/vendor/sbadmin-two.js'
		'@AppBundle/Resources/public/js/vendor/metis-menu.js'
		filter='?yui_js' output='resources/js/app.jquery.min.js' %}
		<script type="text/javascript" src="{{ asset_url }}"></script>
		{% endjavascripts %}
	</body>
</html>

{% endspaceless %}
