{% extends 'AppSharedBundle:Shared:app-base.html.twig' %}

{% block title %}Dashboard | GrappBox{% endblock %}

{% block child_javascript_head %}

{% endblock %}

{% block body %}

<body ng-app="app-dashboard" ng-controller="app-dashboard-controller">
	<div id="wrapper">
		<!-- Navigation content -->
		<nav class="navbar navbar-default navbar-static-top" role="navigation">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/">GrappBox</a>
			</div>
			<!-- Navigation menu (top) -->
			<ul class="nav navbar-top-links navbar-right">
				<!-- Notifications menu -->
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href=""><i class="fa fa-bell fa-fw"></i><i class="fa fa-caret-down"></i></a>
					<ul class="dropdown-menu dropdown-alerts"></ul>
				</li>
				<!-- User menu -->
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href=""><i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i></a>
					<ul class="dropdown-menu dropdown-user">
						<li><a href=""><i class="fa fa-user fa-fw"></i> Profile</a></li>
						<li><a href=""><i class="fa fa-gear fa-fw"></i> Settings</a></li>
						<li class="divider"></li>
						<li><a href="/"><i class="fa fa-sign-out fa-fw"></i> Logout</a></li>
					</ul>
				</li>
			</ul>
			<!-- Navigation menu (left) -->
			<div class="navbar-default sidebar" role="navigation">
				<div class="sidebar-nav navbar-collapse">
					<ul class="nav" id="side-menu">
						<li><a href="/app/dashboard"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a></li>
						<li><a href=""><i class="fa fa-edit fa-fw"></i> Whiteboard</a></li>
					</ul>
				</div>
			</div>
		</nav>

		<!-- Page content -->
		<div id="page-wrapper">
			<div class="row">
				<div class="col-lg-12">
					<h1 class="page-header">Dashboard</h1>
				</div>
			</div>
		</div>
	</div>

	{% include 'AppSharedBundle:Shared:app-footer.html.twig' %}

    {% block child_javascripts_bottom %}
		{% javascripts
		'@AppDashboardBundle/Resources/public/js/custom/app-dashboard.js'
		output='resources/js/app-dashboard.min.js' %}
		<script type="text/javascript" src="{{ asset_url }}"></script>
		{% endjavascripts %}
    {% endblock %}

</body>

{% endblock %}
