 <!DOCTYPE html>
 <html lang="en">
 <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta http-equiv="content-language" content="en-us" />
    <meta name="description" content="GrappBox" />
    <meta name="author" content="The GrappBox team" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="UTF-8" />
    <title>{% block title %}{% endblock %}</title>

    <!-- Google Fonts -->
    <link rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700' />
    <link rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Roboto+Condensed:300,400' />

    {% block child_fonts %}{% endblock %}

    <link rel='stylesheet' type='text/css' href={{ asset('resources/css/base.min.css') }} />
    {% stylesheets
    '@AppSharedBundle/Resources/public/css/vendor/sbadmin-two.css'
    '@AppSharedBundle/Resources/public/css/custom/app-base.css'
    filter='?yui_css' output='resources/css/app-base.min.css' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}

    {% block child_stylesheets %}{% endblock %}

    {% block child_javascripts_head %}{% endblock %}

    <!-- Responsive for IE8 -->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <span ng-cloak ng-show="show"></span>
    <div ng-app="grappbox" id="app-wrapper">
        <!-- Navigation content -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Grapp<span class="red">Box</span></a>
            </div>
            <!-- Navigation menu (top) -->
            <ul class="nav navbar-top-links navbar-right">
                <!-- Notifications menu -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href=""><i class="fa fa-bell fa-fw"></i><i class="fa fa-caret-down"></i></a>
                    <ul class="dropdown-menu dropdown-alerts"></ul>
                </li>
                <!-- User menu -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href=""><i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i></a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href=""><i class="fa fa-user fa-fw"></i> Profile</a></li>
                        <li><a href=""><i class="fa fa-gear fa-fw"></i> Settings</a></li>
                        <li class="divider"></li>
                        <li><a href="/"><i class="fa fa-sign-out fa-fw"></i> Logout</a></li>
                    </ul>
                </li>
            </ul>
            <!-- Navigation menu (left) -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li><a href="/app/dashboard"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a></li>
                        <li><a href=""><i class="fa fa-edit fa-fw"></i> Whiteboard</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Page content -->
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="app-page">

                        {% block body_content %}{% endblock %}
                    
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'AppSharedBundle:Shared:app-footer.html.twig' %}

    {% javascripts
    'resources/js/base.min.js'
    '@AppSharedBundle/Resources/public/js/vendor/sbadmin-two.js'
    '@AppSharedBundle/Resources/public/js/vendor/metis-menu.js'
    filter='?yui_js' output='resources/js/app-base.jquery.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% block child_javascripts_bottom %}{% endblock %}
</body>

</html>
