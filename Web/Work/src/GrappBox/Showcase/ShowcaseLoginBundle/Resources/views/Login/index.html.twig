		<section id="login">
			<div class="content-section content-section-b">
				<div class="container">
					<div class="row">
						<div class="col-md-6 col-md-offset-3 app-login-container">
							<div class="app-logo center-block">
								<a href="/" class="back-home"><h1>Grapp<span class="red">Box</span></h1></a>
							</div>
							<div class="app-login center-block">
								<form class="form-signin">
									<label for="inputEmail" class="sr-only">Email</label>
									<input type="email" id="inputEmail" class="form-control" placeholder="Email (grappbox@awesome.com)" autofocus="">
									<label for="inputPassword" class="sr-only">Password</label>
									<input type="password" id="inputPassword" class="form-control" placeholder="Password">
									<button class="btn btn-lg btn-primary btn-block btn-login hvr-sweep-to-right" type="submit"><i class="fa fa-check"></i>Sign in</button>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

    	<section id="contact">
	        <div class="content-section content-section-a">
	            <div class="contact-banner banner">
	                <div class="container">
	                    <div class="row">
	                        <div class="col-lg-3">
	                            <h2>Stay in touch !</h2>
	                        </div>
	                        <div class="col-lg-9">
	                            <ul class="list-inline banner-social-buttons">
	                                <li>
	                                    <a target="_blank" class="btn btn-default btn-lg btn-social-round hvr-radial-out btn-twitter" href="https://twitter.com/GrappBox"><i class="fa fa-twitter fa-fw"></i></a>
	                                    <span class="network-name">@GrappBox</span>
	                                </li>
	                                <li>
	                                    <a target="_blank" class="btn btn-default btn-lg btn-social-round hvr-radial-out btn-facebook" href="https://facebook.com/GrappBox"><i class="fa fa-facebook fa-fw"></i></a>
	                                    <span class="network-name">GrappBox</span>
	                                </li>
	                                <li>
	                                    <a target="_blank" class="btn btn-default btn-lg btn-social-round hvr-radial-out btn-google-plus" href="https://plus.google.com/115657691021326143456/posts"><i class="fa fa-google-plus fa-fw"></i></a>
	                                    <span class="network-name">+GrappBox</span>
	                                </li>
	                                <li>
	                                    <a target="_blank" class="btn btn-default btn-lg btn-social-round hvr-radial-out btn-mail" href="mailto:grappbox@gmail.com"><i class="fa fa-envelope-o fa-fw"></i></a>
	                                    <span class="network-name">grappbox@gmail.com</span>
	                                </li>
	                            </ul>
	                        </div>
	                    </div>
	                </div>
	            </div>
	        </div>
