{% extends 'AppBundle:home:base.html.twig' %}

{% block title %}Pre-order - GrappBox{% endblock %}

{% block canonical %}<link rel="canonical" href="https://grappbox.com/register">{% endblock %}

{% block body %}

<!-- Pre-order -->
<div id="preorder">
  <div class="container">
    <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2 col-xs-12">
      <h4 class="well-title"><a class="well-logo" href="/"><img src="resources/img/favicon/apple-icon-180x180.png" height="35" width="35" alt="GrappBox small logo"></a>Join GrappBox</h4>
      <div class="well">
        <div class="alert alert-preorder" id="form-message">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <p></p>
        </div>
        {{ form_start(form) }}
          <fieldset>
            <div class="form-group label-floating">
              <label for="form_firstname" class="control-label">Firstname</label>
              {{ form_widget(form.firstname, {'attr': { 'class': 'form-control' }}) }}
            </div>
            <div class="form-group label-floating">
              <label for="form_lastname" class="control-label">Lastname</label>
              {{ form_widget(form.lastname, {'attr': { 'class': 'form-control' }}) }}
            </div>
            <div class="form-group label-floating">
              <label for="form_email" class="control-label">Email</label>
              {{ form_widget(form.email, {'attr': { 'class': 'form-control' }}) }}
            </div>
            <div class="form-group submit">
              {{ form_widget(form.submit, {'attr': {'title': 'Pre-order your GrappBox account', 'class': 'btn btn-default' }}) }}
              {{ form_rest(form) }}
            </div>
          </fieldset>
        {{ form_end(form) }}
      </div>
      <div class="well text-center">Get beta access, news and more!</div>
      <div class="well-link"><a href="/" title="Return to GrappBox website"><i class="material-icons">keyboard_backspace</i>Back to GrappBox.com</a></div>      
    </div>
  </div>
</div>

<!-- Footer -->
<div class="footer footer-reverse footer-fixed">
  <p>Copyright &copy; GrappBox 2017.<br>All rights reserved.</p>
</div>

{% endblock %}
