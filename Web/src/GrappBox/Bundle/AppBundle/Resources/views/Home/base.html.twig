{% spaceless %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta http-equiv="content-language" content="en-us" />
    <meta name="description" content="GrappBox" />
    <meta name="author" content="GrappBox" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="UTF-8" />
    <title>{% block title %}{% endblock %}</title>
    <!-- Google Fonts -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" />

    {% stylesheets
    '@AppBundle/Resources/public/css/vendor/bootstrap.css'
    '@AppBundle/Resources/public/css/vendor/bootstrap-material-design.css'
    '@AppBundle/Resources/public/css/vendor/material-icons.css'
    '@AppBundle/Resources/public/css/vendor/ripples.css'
    '@AppBundle/Resources/public/css/home/home.css'
    filter='?uglifycss' output='resources/css/home.min.css' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}

    <!-- Responsive for IE8 -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="resources/js/html5shiv.min.js"></script>
    <script src="resources/js/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
    {% block body %}{% endblock %}

    {% javascripts
    '@AppBundle/Resources/public/js/vendor/jquery.js'
    '@AppBundle/Resources/public/js/vendor/bootstrap.js'
    '@AppBundle/Resources/public/js/vendor/bootstrap-material.js'
    '@AppBundle/Resources/public/js/vendor/cookie.js'
    '@AppBundle/Resources/public/js/vendor/hammer.js'
    '@AppBundle/Resources/public/js/vendor/ripples.js'
    '@AppBundle/Resources/public/js/home/home.js'
    '@AppBundle/Resources/public/js/home/login.js'
    filter='?uglifyjs2' output='resources/js/home.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

  </body>
</html>

{% endspaceless %}