{% extends 'AppBundle:Home:base.html.twig' %}

{% block title %}Sign in to GrappBox{% endblock %}

{% block body %}

<!-- Navbar -->
<nav class="navbar navbar-fixed-top navbar-custom navbar-reverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand page-scroll" href="/"><img src="resources/img/favicon/apple-icon-180x180.png" height="35" width="35" alt="GrappBox small logo">Grapp<span class="red">Box</span></a>
    </div>

    <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
      <ul class="nav navbar-nav">
        <li><a href="/#about">About</a></li>
        <li><a href="/#services">Services</a></li>
        <li><a href="/#contact">Contact</a></li>
        <li><a class="login" href="/login"><i class="material-icons">open_in_new</i>Login</a></li>
      </ul>
    </div>
  </div>
</nav>

<!-- Login -->
<div id="login">
  <div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12">
      <h3 class="well-title">Sign in</h3>
      <div class="well well-lg">
        <div class="alert alert-danger" id="form-message">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <p></p>
        </div>
        {{ form_start(form, {'attr': {'class': 'form-horizontal' }}) }}
          <fieldset>
            <div class="form-group col-md-12">
              <label for="email" class="control-label">Email</label>
              {{ form_widget(form.email, {'attr': { 'placeholder': 'grappbox@awesome.com', 'class': 'form-control' }}) }}
            </div>
            <div class="form-group col-md-12">
              <label for="password" class="control-label">Password</label>
              {{ form_widget(form.password, {'attr': { 'placeholder': 'Password', 'class': 'form-control' }}) }}
            </div>
            <div class="form-group col-md-12 submit">
              {{ form_widget(form.submit, {'attr': {'title': 'Log in to your GrappBox account', 'class': 'btn btn-default', 'id': 'form-submit' }}) }}
              {{ form_rest(form) }}
            </div>
          </fieldset>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>

<!-- Footer -->
<div class="footer footer-reverse footer-fixed">
  <p>Copyright &copy; GrappBox 2016. All rights reserved.</p>
</div>

{% endblock %}