{% extends 'AppBundle:Home:base.html.twig' %}

{% block title %}Sign in to GrappBox{% endblock %}

{% block body %}

<!-- Navbar -->
<nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand page-scroll" href="/"><img src="resources/img/favicon/apple-icon-180x180.png" height="35" width="35" alt="GrappBox small logo">Grapp<span class="box">Box</span></a>
    </div>

    <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
      <ul class="nav navbar-nav">
        <li><a href="#about">About</a></li>
        <li><a href="#services">Services</a></li>
        <li><a href="#contact">Contact</a></li>
        <li><a class="login" href="/login"><i class="material-icons">open_in_new</i>Login</a></li>
      </ul>
    </div>
  </div>
</nav>

<div class="container-fluid">
  <div class="row">
    <div class="container">

      <div class="login-box">
        <div class="col-md-6">
          <h1>Sign in to Grapp<span class="red">Box</span></h1>
          <div class="well well-lg">
            <div class="alert alert-danger" id="form-message">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <p></p>
            </div>
            {{ form_start(form, {'attr': {'class': 'form-horizontal' }}) }}
              <fieldset>
                <div class="form-group no-margin">
                  <label for="firstname" class="col-md-12 control-label">Email</label>
                  <div class="col-md-12">
                    {{ form_widget(form.email, {'attr': { 'placeholder': 'grappbox@awesome.com', 'class': 'form-control' }}) }}
                  </div>
                </div>
                <div class="form-group no-margin">
                  <label for="firstname" class="col-md-12 control-label">Password</label>
                  <div class="col-md-12">
                    {{ form_widget(form.password, {'attr': { 'placeholder': 'Password', 'class': 'form-control' }}) }}
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-12 right">
                    {{ form_widget(form.submit, {'attr': {'title': 'Log in to your GrappBox account', 'class': 'btn btn-default', 'id': 'form-submit' }}) }}
                    {{ form_rest(form) }}
                  </div>
                </div>
              </fieldset>
            {{ form_end(form) }}
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<div id="footer">
  <div class="container">
    <p>Copyright &copy; GrappBox 2016. All rights reserved.</p>
  </div>
</div>

{% endblock %}