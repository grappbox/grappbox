  <body>
    <div data-ng-app="grappbox" id="ng-app" ng-strict-di>
      <!-- Navigation -->
      <div class="navigation {[{ path.colors[path.current] + '-background' }]} {[{ sidebar.open ? 'open' : '' }]}">
        <div class="container-fluid">
          <div class="navigation-left" data-ng-cloak>
            <a href="" title="Toggle navigation drawer" class="btn {[{ path.colors[path.current] + '-hover' }]}" data-ng-click="sidebar.toggle()">
              <i class="material-icons">menu</i></a>
            <p>{[{ page.load ? 'Loading...' : page.title }]}</p>
          </div>
          <div class="navigation-right">
            <a href="notifications" title="See all your notifications" class="btn hidden-xs {[{ path.colors[path.current] + '-hover' }]}">
              <i class="material-icons">{[{ path.icons['/notifications'] }]}</i></a>
            <a href="profile" title="View and edit your profile" class="btn hidden-xs {[{ path.colors[path.current] + '-hover' }]}">
              <i class="material-icons">{[{ path.icons['/profile'] }]}</i></a>
            <a href="logout" title="Sign out of GrappBox" class="btn hidden-xs {[{ path.colors[path.current] + '-hover' }]}" >
              <i class="material-icons">{[{ path.icons['/logout'] }]}</i></a>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>

      <!-- Navigation drawer -->
      <aside class="sidebar {[{ sidebar.open ? 'open' : '' }]}">
        <div class="sidebar-header">
          <a class="toggle {[{ path.colors[path.current] + '-hover' }]}" href="" data-ng-click="sidebar.toggle()"><i class="material-icons">arrow_back</i></a>
          <a href="profile" title="View and edit your profile"><img class="avatar" src="../resources/img/default_avatar.min.png"></a>
          <p class="ellipsis user"><a href="profile" title="View and edit your profile">{[{ user.firstname }]} {[{ user.lastname }]}</a></p>
          <div class="clearfix"></div>
        </div>
        <div class="sidebar-content">
          <ul>
            <li data-ng-if="project.set">
              <a href="" title="Sign out of this project" data-ng-click="project.disconnect()" class="btn">
                <i class="material-icons">arrow_back</i>Change project</a>
            </li>            
            <li>
              <a href="notifications" title="See all your notifications" class="btn visible-xs {[{ path.routes['/notifications'] ? 'active' : '' }]}">
                <i class="material-icons">{[{ path.icons['/notifications'] }]}</i>Notifications</a>
            </li>
            <li>
              <a data-ng-href="{[{ project.set ? 'dashboard/' + project.id : './' }]}" title="Go to your dashboard" class="btn {[{ path.routes['/dashboard'] ? 'active' : '' }]}">
                <i class="material-icons">{[{ path.icons['/dashboard'] }]}</i>Dashboard</a>
            </li>
            <li>
              <a href="calendar" title="Go to your calendar" class="btn {[{ path.routes['/calendar'] ? 'active' : '' }]}">
                <i class="material-icons">{[{ path.icons['/calendar'] }]}</i>Calendar</a>
            </li>
            <li data-ng-if="project.set">
              <a data-ng-href="{[{ 'cloud/' + project.id }]}" title="Access your online files and folders" class="btn {[{ path.routes['/cloud'] ? 'active' : '' }]}">
                <i class="material-icons">{[{ path.icons['/cloud'] }]}</i>Cloud</a>
            </li>
            <li data-ng-if="project.set">
              <a data-ng-href="{[{ 'timeline/' + project.id }]}" title="Go to your projects timelines" class="btn {[{ path.routes['/timeline'] ? 'active' : '' }]}">
                <i class="material-icons">{[{ path.icons['/timeline'] }]}</i>Timeline</a>
            </li>
            <li data-ng-if="project.set">
              <a data-ng-href="{[{ 'bugtracker/' + project.id }]}" title="Go to the bugtracker section" class="btn {[{ path.routes['/bugtracker'] ? 'active' : '' }]}">
                <i class="material-icons">{[{ path.icons['/bugtracker'] }]}</i>Bugtracker</a>
            </li>
            <li data-ng-if="project.set">
              <a data-ng-href="{[{ 'tasks/' + project.id }]}" title="Go to the tasks section" class="btn {[{ path.routes['/tasks'] ? 'active' : '' }]}">
                <i class="material-icons">{[{ path.icons['/tasks'] }]}</i>Tasks</a>
            </li>
            <li data-ng-if="project.set">
              <a data-ng-href="{[{ 'gantt/' + project.id }]}" title="Go to the gantt section" class="btn {[{ path.routes['/gantt'] ? 'active' : '' }]}">
                <i class="material-icons">{[{ path.icons['/gantt'] }]}</i>Gantt</a>
            </li>
            <li data-ng-if="project.set">
              <a data-ng-href="{[{ 'whiteboard/' + project.id }]}" title="Use your projects collaborative whiteboards" class="btn {[{ path.routes['/whiteboard'] ? 'active' : '' }]}">
                <i class="material-icons">{[{ path.icons['/whiteboard'] }]}</i>Whiteboard</a>
            </li>
            <li data-ng-if="project.set">
              <a data-ng-href="{[{ 'settings/' + project.id }]}" title="Edit your current project settings" class="btn {[{ path.routes['/settings'] ? 'active' : '' }]}">
                <i class="material-icons">{[{ path.icons['/settings'] }]}</i>Project settings</a>
            </li>
            <li>
              <a href="profile" title="View and edit your profile" class="btn {[{ path.routes['/profile'] ? 'active' : '' }]}">
                <i class="material-icons">{[{ path.icons['/profile'] }]}</i>Profile</a>
            </li>
            <li>
              <a href="logout" title="Sign out of GrappBox" class="btn visible-xs">
                <i class="material-icons">{[{ path.icons['/logout'] }]}</i>Log out</a>
            </li>              
          </ul>
        </div>
      </aside>

      <!-- Page content -->
      <div class="page-content {[{ sidebar.open ? 'open' : '' }]}">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <!-- Dynamic view -->
              <div data-ng-if="page.load">
                <div class="spinner view">
                  <svg class="circular" viewBox="25 25 50 50"><circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/></circle></svg>
                </div>
              </div>
              <div data-ng-if="!page.load">
                <div class="container-content" data-ng-view autoscroll="true"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
  </body>
