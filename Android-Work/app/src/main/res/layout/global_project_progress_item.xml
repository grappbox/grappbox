<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/project_image"
            android:padding="15dip"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/game_sphere"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="ProjectName"/>

            <TextView
                android:id="@+id/project_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:textSize="12sp"
                android:text="Client"/>

            <TextView
                android:id="@+id/client_telephone_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:text="ContactTel"/>

            <TextView
                android:id="@+id/client_mail_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ContactMail"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip">

        <ImageView
            android:layout_width="0dip"
            android:layout_weight="0.05"
            android:layout_height="35dip"
            android:layout_gravity="center_horizontal"
            android:paddingStart="5dip"
            android:paddingEnd="5dip"
            android:src="@drawable/edit26"/>

        <TextView
            android:id="@+id/project_task_progress"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="0.1"
            android:gravity="center_vertical"
            android:text="21/42"/>

        <ImageView
            android:layout_width="0dip"
            android:layout_weight="0.05"
            android:layout_height="35dip"
            android:layout_gravity="center_horizontal"
            android:paddingStart="5dip"
            android:paddingEnd="5dip"
            android:src="@drawable/edit26"/>

        <TextView
            android:id="@+id/project_waiting_progress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="0dip"
            android:paddingEnd="5dip"
            android:text="@string/zero_number_string_value"/>

        <TextView
            android:layout_width="0dip"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/waiting_progress_dashboard"/>

        <ImageView
            android:layout_width="0dip"
            android:layout_weight="0.05"
            android:layout_height="35dip"
            android:layout_gravity="center_horizontal"
            android:paddingStart="5dip"
            android:paddingEnd="5dip"
            android:src="@drawable/edit26"/>

        <TextView
            android:id="@+id/project_problem_progress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="0dip"
            android:paddingEnd="5dip"
            android:text="@string/zero_number_string_value"/>

        <TextView
            android:layout_width="0dip"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/problem_progress_dashboard"/>

    </LinearLayout>

</LinearLayout>