<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.grappbox.grappbox.grappbox.Cloud.CloudExplorerFragment">
    <android.support.design.widget.TabLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:elevation="0dp"
        android:id="@+id/breadcrumb"
        app:tabMode="scrollable">
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="/" />
    </android.support.design.widget.TabLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cloudexplorer_itemlist"
            />
    </android.support.v4.widget.SwipeRefreshLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/loader"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:layout_margin="0dp"
        android:gravity="bottom"
        android:padding="0dp"
        android:background="#c8c8c8"
        android:layout_gravity="bottom"
        android:id="@+id/lay_toolbar_buttons">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_createDir"
            android:src="@drawable/ic_createdir"
            android:layout_weight="1"
            android:background="@drawable/imagebutton_background"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="0dp"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:tint="@android:color/white" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_import"
            android:src="@drawable/ic_upload"
            android:layout_weight="1"
            android:padding="0dp"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:background="@drawable/imagebutton_background"
            android:layout_marginRight="1dp"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:tint="@android:color/white" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_import_secure"
            android:src="@drawable/ic_upload_secure"
            android:layout_weight="1"
            android:padding="0dp"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:background="@drawable/imagebutton_background"
            android:clickable="true"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:focusableInTouchMode="false"
            android:tint="@android:color/white" />

    </LinearLayout>

</LinearLayout>
