<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="0dp">

            <TextView
                android:text="Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_title"
                tools:text="Title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/abc_text_size_large_material"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                />

            <ImageButton
                android:src="@drawable/ic_delete_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_close_recover"
                android:layout_weight="20"
                android:tint="@color/colorGrappboxRed"
                android:background="#00ffffff" />
        </LinearLayout>


        <TextView
            android:text="Opened by %s the %s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_openby_date"
            tools:text="Opened by %s the %s"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:elevation="0dp"
            android:foregroundGravity="bottom"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/lay_tags"
                android:layout_margin="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:gravity="bottom|left"
                android:padding="0dp"
                android:paddingBottom="0dp"
                android:paddingEnd="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:isScrollContainer="true"
                android:layout_gravity="bottom"
                android:dividerPadding="0dp"
                android:foregroundGravity="left|bottom" />
        </HorizontalScrollView>
    </LinearLayout>
</android.support.v7.widget.CardView>