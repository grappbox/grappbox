<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.grappbox.grappbox.grappbox.BugTracker.EditBugActivityFragment">


        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loader"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/lay_status">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Status :"
                android:id="@+id/txt_status"
                android:gravity="left"
                android:foregroundGravity="left"
                android:layout_gravity="left"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="by"
                android:id="@+id/txt_owner"
                android:gravity="end"
                android:foregroundGravity="right"
                android:layout_gravity="right"
                android:layout_marginRight="0dp"
                android:textAlignment="textEnd"
                android:layout_weight="1" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_title"
            android:layout_gravity="center_horizontal"
            android:text="Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:enabled="false"
            android:textColor="#000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/et_description"
            android:text="Description"
            android:gravity="top"
            android:layout_marginBottom="10dp"
            android:maxLines="12"
            android:enabled="false"
            android:textColor="#000" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btn_save"
            android:background="@color/colorGrappboxBlack"
            android:textColor="#fff"
            android:visibility="gone" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:id="@+id/lay_assignees"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See Assignees"
                android:id="@+id/btn_assignee"
                android:layout_gravity="start"
                android:textAlignment="textStart"
                android:background="#ffffff"
                android:layout_weight="1"
                android:layout_marginRight="0dp"
                android:paddingRight="0dp"
                android:paddingLeft="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/lay_categories">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See categories"
                android:id="@+id/btn_categories"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:paddingRight="0dp"
                android:paddingLeft="5dp"
                android:background="#ffffff"
                android:layout_gravity="start" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/lay_comments">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See comments"
                android:id="@+id/btn_comments"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:paddingRight="0dp"
                android:paddingLeft="5dp"
                android:background="#ffffff"
                android:layout_gravity="start"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close ticket"
            android:id="@+id/btn_close"
            android:textColor="#fff"
            android:background="@color/colorGrappboxRed"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>
