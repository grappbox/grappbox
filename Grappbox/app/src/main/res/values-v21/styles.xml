<resources>

    <!-- Dashboard application theme. Lolipop compatibility -->
    <style name="DashboardTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/GrappBlackMedium</item>
        <item name="colorPrimaryDark">@color/GrappRed</item>
        <item name="colorAccent">@color/GrappRed</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


</resources>
