<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.grappbox.grappbox.ProjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment android:name="com.grappbox.grappbox.statistic_fragment.StatisticAdvancementFragment"
            android:id="@+id/advancement_fragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:layout="@layout/statistic_advancement_fragment"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <fragment android:name="com.grappbox.grappbox.statistic_fragment.StatisticTimelineFragment"
            android:id="@+id/timeline_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/statistic_timeline_fragment"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <fragment android:name="com.grappbox.grappbox.statistic_fragment.StatisticBugtrackerFragment"
            android:id="@+id/bugtracker_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/statistic_bugtracker_fragment"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <fragment android:name="com.grappbox.grappbox.statistic_fragment.StatisticCloudFragment"
            android:id="@+id/cloud_fragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:layout="@layout/statistic_cloud_fragment"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <fragment android:name="com.grappbox.grappbox.statistic_fragment.StatisticBugUserRepartitionFragment"
            android:id="@+id/user_bug_repartition_fragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:layout="@layout/statistic_bug_user_repartion_fragment"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </LinearLayout>

</ScrollView>
