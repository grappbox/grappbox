<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dim_default_list_left_right"
    android:layout_marginRight="@dimen/dim_default_list_left_right"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">
    <ImageView
        android:contentDescription="@string/default_user_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        app:srcCompat="@drawable/default_logo_avatar"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TitleTextView"
            android:text="@string/not_yet_defined"
            android:id="@+id/project_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_yet_defined"
            style="@style/SubHeadTextView"
            android:id="@+id/company_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:contentDescription="@string/bug_number_in_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_bugtracker"
                android:tint="@color/GrappPurple"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EmphasisTextView"
                android:id="@+id/bugcount" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:contentDescription="@string/task_number_in_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_task"
                android:tint="@color/GrappBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EmphasisTextView"
                android:id="@+id/taskcount"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>