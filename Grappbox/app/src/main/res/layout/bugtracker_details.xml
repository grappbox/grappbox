<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- fixed -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/GrappPurple"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/GrappWhiteLight"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginBottom="15dp"
            android:text="This is title"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textColor="@color/GrappWhiteLight"
            android:textAppearance="@style/EmphasisTextView"
            android:text="this is a loooooonnnnng description and you will accept it"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>
    <!-- end fixed -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/GrappGrayLight">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <include android:layout_height="wrap_content" android:layout_width="wrap_content" layout="@layout/list_item_bugtracker_tagitem"/>
                    <include android:layout_height="wrap_content" android:layout_width="wrap_content" layout="@layout/list_item_bugtracker_tagitem"/>
                    <include android:layout_height="wrap_content" android:layout_width="wrap_content" layout="@layout/list_item_bugtracker_tagitem"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignee"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <include layout="@layout/bug_assignee" />
                    <include layout="@layout/bug_assignee" />
                    <include layout="@layout/bug_assignee" />
                    <include layout="@layout/bug_assignee" />
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:padding="10dp"/>

            <!-- all above components have to be in the recycler view unless the fixed view -->
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>