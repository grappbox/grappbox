<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    >

    <ImageView
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:id="@+id/avatar"
        android:src="@drawable/default_logo_avatar"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a title"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/SubHeadTextView"
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/avatar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opened the 2016-09-17"
        android:id="@+id/date_status"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="@+id/title" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textAlignment="center"
        android:id="@+id/nb_assignees"
        android:drawableStart="@drawable/default_logo_avatar"
        android:layout_marginEnd="10dp"
        android:drawablePadding="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/nb_comments"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="42"
        android:textAlignment="center"
        android:id="@id/nb_comments"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/ic_timeline"
        android:drawablePadding="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nb_assignees" />
