<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:orientation="horizontal"
    android:id="@+id/root"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:contentDescription="@string/default_user_photo"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:id="@+id/avatar"
        app:srcCompat="@drawable/default_logo_avatar"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:adjustViewBounds="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_yet_defined"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/SubHeadTextView"
            android:id="@+id/title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_yet_defined"
            android:id="@+id/date_status"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <LinearLayout
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/tag_container"
            android:layout_height="25dp">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="start">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/nb_assignees"
            android:drawableStart="@drawable/default_logo_avatar"
            android:layout_marginEnd="10dp"
            android:drawablePadding="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/nb_comments"
            android:layout_marginEnd="10dp"
            android:drawableStart="@drawable/ic_timeline"
            android:drawablePadding="5dp" />
    </LinearLayout>
</LinearLayout>