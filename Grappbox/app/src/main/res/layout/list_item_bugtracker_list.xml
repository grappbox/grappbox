<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="77dp"
        android:layout_height="0dp"
        android:id="@+id/avatar"
        android:src="@drawable/default_logo_avatar"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="15dp"
        tools:layout_conversion_absoluteWidth="77dp"
        tools:layout_conversion_absoluteHeight="537dp"
        android:cropToPadding="true"
        android:adjustViewBounds="true"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@+id/date_status"
        app:layout_constraintVertical_bias="0.35000002" />


    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="This is a title"
        style="@style/SubHeadTextView"
        android:id="@+id/title"
        tools:layout_conversion_absoluteX="77dp"
        tools:layout_conversion_absoluteY="265dp"
        tools:layout_conversion_absoluteWidth="230dp"
        tools:layout_conversion_absoluteHeight="19dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="@+id/nb_assignees" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Opened the 2016-09-17"
        android:id="@+id/date_status"
        tools:layout_conversion_absoluteX="77dp"
        tools:layout_conversion_absoluteY="284dp"
        tools:layout_conversion_absoluteWidth="230dp"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/tag_container"
        tools:layout_conversion_absoluteX="77dp"
        tools:layout_conversion_absoluteY="301dp"
        tools:layout_conversion_absoluteWidth="230dp"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/date_status"
        app:layout_constraintRight_toRightOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/date_status"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/avatar">

    </LinearLayout>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:textAlignment="center"
        android:id="@+id/nb_assignees"
        android:drawableStart="@drawable/default_logo_avatar"
        tools:layout_conversion_absoluteX="307dp"
        tools:layout_conversion_absoluteY="259dp"
        tools:layout_conversion_absoluteWidth="76dp"
        tools:layout_conversion_absoluteHeight="24dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/title" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="42"
        android:textAlignment="center"
        android:id="@+id/nb_comments"
        android:drawableStart="@drawable/ic_timeline"
        tools:layout_conversion_absoluteX="307dp"
        tools:layout_conversion_absoluteY="283dp"
        tools:layout_conversion_absoluteWidth="76dp"
        tools:layout_conversion_absoluteHeight="24dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/nb_assignees"
        app:layout_constraintTop_toBottomOf="@+id/nb_assignees"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/nb_assignees" />

</android.support.constraint.ConstraintLayout>