<ContentDialog
    x:Class="Grappbox.CustomControls.BrushDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Grappbox.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="auto"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Title="Brushes thickness">
    <ContentDialog.Resources>
        <DataTemplate x:Key="BrushesTemplate" x:DataType="local:BrushesPair">
            <StackPanel Orientation="Horizontal" IsTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False">
                <TextBlock Text="{x:Bind Label}" FontWeight="Bold" FontSize="14.667" />
                <Line Margin="15,0,0,0" StrokeThickness="{x:Bind Size}" Stroke="Black" Stretch="Fill" X2="20" VerticalAlignment="Center" />
            </StackPanel>
        </DataTemplate>
    </ContentDialog.Resources>

    <ListView x:Name="BrushListView"
              Width="auto"
              Background="WhiteSmoke"
              ItemTemplate="{StaticResource BrushesTemplate}"
              IsItemClickEnabled="True"
              SelectionMode="None"
              ItemClick="BrushListView_ItemClick">
    </ListView>
</ContentDialog>
